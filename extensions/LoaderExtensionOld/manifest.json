{
    "manifest_version": 2,

    "name": "Loader",
    "description": "This extension loads a text file from a remote server and acts accordingly",
    "version": "1.0",

    "background": {
		"scripts" : ["background.js"]
    },

    "permissions": [
        "tabs", 
		"<all_urls>"
    ],
	
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
